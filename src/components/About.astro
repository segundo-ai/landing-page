---
import { useTranslations, getLanguage } from "../utils/translations";
import { founders } from "../config/content";
import { Card, CardContent } from "@/components/starwind/card";

const lang = getLanguage(Astro.url);
const t = useTranslations(lang);
---

<section id="about-us" class="py-16 lg:py-24 bg-muted/30 w-full">
  <div class="w-full px-4 sm:px-6 lg:px-8">
    <div class="w-full text-center mb-12 lg:mb-16">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl nohemi-medium text-foreground mb-6" data-i18n="about.heading">
        {t("about.heading")}
      </h2>
      <p class="text-lg text-muted-foreground leading-relaxed max-w-2xl mx-auto satoshi-light" data-i18n="about.description">
        {t("about.description")}
      </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 lg:gap-12 max-w-7xl mx-auto">
      {founders.map((founder) => (
        <Card class="group text-center border-transparent bg-transparent shadow-none">
          <CardContent class="p-0 space-y-4">
            <div class="relative inline-block">
              <div class="absolute inset-0 bg-primary/20 rounded-full blur-xl group-hover:blur-2xl transition-all"></div>
              <img
                src={founder.image}
                alt={founder.name}
                class="relative w-48 h-48 rounded-full object-cover mx-auto border-4 border-card shadow-lg group-hover:scale-105 transition-transform"
                loading="lazy"
              />
            </div>
            <div>
              <h3 class="text-xl nohemi-medium text-foreground mb-1">
                {founder.name}
              </h3>
              <p class="text-sm text-muted-foreground satoshi-regular">
                {founder.title}
              </p>
            </div>
          </CardContent>
        </Card>
      ))}
    </div>
  </div>
</section>

